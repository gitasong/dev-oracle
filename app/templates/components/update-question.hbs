{{#if updateQuestionForm}}
  <h3 class="heading">Update <span class="heading h4">"{{question.content}}"</span></h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Type</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="note">Note</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>

      <button {{action 'update' question}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
